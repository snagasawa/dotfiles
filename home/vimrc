" General
set title
set ruler
set cmdheight=2
set wildmenu
set showmatch
set laststatus=2
set list
set listchars=tab:>-,trail:-,eol:â†²
set autoread
set noswapfile

" Colorscheme
syntax on

" Line
set number
set wrap

" Tab
set tabstop=2
set shiftwidth=2
set expandtab
set smarttab

" Indentation
set autoindent
set smartindent

" Search
set smartcase
set hlsearch
set incsearch

" statusline
set statusline=%f%m%r%h%w\ [HEX=\%02.2B]\ [POS=%04l,%04v][%p%%]\ [LEN=%L]
set laststatus=2

" --------------------
" vim-plug
" --------------------
call plug#begin('~/.vim/plugged')

" Utility
Plug 'Shougo/neocomplete.vim'
Plug 'Shougo/neosnippet'
Plug 'Shougo/neosnippet-snippets'
